<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey">

    <TextView
        android:id="@+id/txt_title"
        android:fontFamily="@font/minefont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="SHOP"
        android:textColor="@color/blood"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_msg"
        android:fontFamily="@font/minefont"
        style="@android:style/TextAppearance.DeviceDefault.Medium"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="25dp"
        android:text="Welcome to my shop.\nLook at how much."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="160sp"
        android:layout_height="160sp"
        android:background="@drawable/square_bg"
        android:padding="5dp"
        android:backgroundTint="@color/darkRed"
        android:layout_marginStart="17dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_title"
        app:srcCompat="@drawable/malikyeshop" />

    <TextView
        android:id="@+id/foodTitle"
        android:fontFamily="@font/minefont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Food Area"
        android:textColor="@color/black"
        style="@android:style/TextAppearance.DeviceDefault.Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />


    <TableLayout
        android:id="@+id/foodLayoutMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg"
        android:orientation="horizontal"
        android:padding="18dp"
        app:layout_constraintEnd_toEndOf="@+id/foodTitle"
        app:layout_constraintStart_toStartOf="@+id/foodTitle"
        style="@android:style/TextAppearance.DeviceDefault.Small"
        app:layout_constraintTop_toBottomOf="@+id/foodTitle">

        <TableRow

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp">

            <TextView
                android:fontFamily="@font/minefont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="Type"
                android:layout_marginHorizontal="10dp"
                />

            <TextView
                android:fontFamily="@font/minefont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="Scaling"
                android:layout_marginHorizontal="10dp"
                />

            <TextView
                android:fontFamily="@font/minefont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="Cost"
                android:layout_marginHorizontal="10dp"
                />

            <TextView
                android:fontFamily="@font/minefont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="Buy It?"
                android:layout_marginHorizontal="10dp"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="5dp">

            <TextView
                android:fontFamily="@font/minefont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="1 Jelly Bean"
                android:layout_marginHorizontal="10dp"/>

            <TextView
                android:fontFamily="@font/minefont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Not Much"
                android:layout_marginHorizontal="10dp"/>

            <TextView
                android:fontFamily="@font/minefont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="10"
                android:layout_marginHorizontal="10dp"/>

            <Button
                android:fontFamily="@font/minefont"
                android:id="@+id/buyFood"
                android:layout_height="30sp"
                android:layout_width="30sp"
                android:background="@drawable/btn_bg"
                android:textColor="@color/white"
                app:backgroundTint="@color/darkRed"
                android:text="+"
                android:paddingStart="15dp"

                android:layout_marginHorizontal="10dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="5dp">

            <TextView
                android:fontFamily="@font/minefont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="McNuggets"
                android:layout_marginHorizontal="10dp"/>

            <TextView
                android:fontFamily="@font/minefont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="A Lot"
                android:layout_marginHorizontal="10dp"/>

            <TextView
                android:fontFamily="@font/minefont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="50"
                android:layout_marginHorizontal="10dp"/>

            <Button
                android:fontFamily="@font/minefont"
                android:id="@+id/buyBigFood"
                android:layout_height="30sp"
                android:layout_width="30sp"
                android:background="@drawable/btn_bg"
                android:textColor="@color/white"
                app:backgroundTint="@color/darkRed"
                android:text="+"
                android:paddingStart="15dp"
                android:layout_marginHorizontal="10dp"/>
        </TableRow>
    </TableLayout>


    <TextView
        android:id="@+id/trainingTitle"
        android:fontFamily="@font/minefont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Training Area"
        android:textColor="@color/black"
        style="@android:style/TextAppearance.DeviceDefault.Medium"
        app:layout_constraintEnd_toEndOf="@+id/foodLayoutMain"
        app:layout_constraintStart_toStartOf="@+id/foodLayoutMain"
        app:layout_constraintTop_toBottomOf="@+id/foodLayoutMain" />

    <TableLayout
        android:id="@+id/TrainingLayoutMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg"
        android:orientation="horizontal"
        style="@android:style/TextAppearance.DeviceDefault.Small"
        android:padding="18dp"
        app:layout_constraintEnd_toEndOf="@+id/foodLayoutMain"
        app:layout_constraintStart_toStartOf="@+id/foodLayoutMain"
        app:layout_constraintTop_toBottomOf="@+id/trainingTitle">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="3dp">

            <TextView
                android:fontFamily="@font/minefont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="Type"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:fontFamily="@font/minefont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="Scaling"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:fontFamily="@font/minefont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="Cost"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:fontFamily="@font/minefont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="Buy It?"
                android:textAlignment="center"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="3dp">

            <TextView
                android:fontFamily="@font/minefont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="Gaming Device"
                android:textAlignment="center" />

            <TextView
                android:fontFamily="@font/minefont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="Not Much"
                android:textAlignment="center" />

            <TextView
                android:fontFamily="@font/minefont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="10"
                android:textAlignment="center" />

            <Button
                android:fontFamily="@font/minefont"
                android:id="@+id/buyGaming"
                android:layout_height="30sp"
                android:layout_width="30sp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/btn_bg"
                android:textColor="@color/white"
                app:backgroundTint="@color/darkRed"
                android:paddingStart="15dp"
                android:text="+"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="3dp">

            <TextView
                android:fontFamily="@font/minefont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="Cake"
                android:textAlignment="center" />

            <TextView
                android:fontFamily="@font/minefont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="Hunger"
                android:textAlignment="center" />

            <TextView
                android:fontFamily="@font/minefont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="25"
                android:textAlignment="center" />

            <Button
                android:fontFamily="@font/minefont"
                android:id="@+id/buyDesert"
                android:layout_height="30sp"
                android:layout_width="30sp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/btn_bg"
                android:textColor="@color/white"
                app:backgroundTint="@color/darkRed"
                android:paddingStart="15dp"
                android:text="+"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="3dp">

            <TextView
                android:fontFamily="@font/minefont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="Choker"
                android:textAlignment="center" />

            <TextView
                android:fontFamily="@font/minefont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="Discipline"
                android:textAlignment="center" />

            <TextView
                android:fontFamily="@font/minefont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="25"
                android:textAlignment="center" />

            <Button
                android:fontFamily="@font/minefont"
                android:id="@+id/buyChoker"
                android:layout_height="30sp"
                android:layout_width="30sp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/btn_bg"
                android:textColor="@color/white"
                app:backgroundTint="@color/darkRed"
                android:paddingStart="15dp"
                android:text="+"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="3dp">

            <TextView
                android:fontFamily="@font/minefont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="Epic Meme"
                android:textAlignment="center" />

            <TextView
                android:fontFamily="@font/minefont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="Happy"
                android:textAlignment="center" />

            <TextView
                android:fontFamily="@font/minefont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="50"
                android:textAlignment="center" />

            <Button
                android:fontFamily="@font/minefont"
                android:id="@+id/buyMeme"
                android:layout_height="30sp"
                android:layout_width="30sp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/btn_bg"
                android:paddingStart="15sp"
                android:text="+"
                android:textColor="@color/white"
                app:backgroundTint="@color/darkRed" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btn_back"
        android:layout_width="53sp"
        android:layout_height="53sp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:background="@android:drawable/ic_menu_revert"
        app:backgroundTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/coins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="100"
        style="@android:style/TextAppearance.DeviceDefault.Small"
        app:layout_constraintStart_toEndOf="@id/coinImg"
        app:layout_constraintTop_toTopOf="@id/coinImg" />

    <ImageView
        android:id="@+id/coinImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/coin"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>